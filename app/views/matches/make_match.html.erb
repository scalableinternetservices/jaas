      <option value="10">Indian</option>
      <option value="11">Mediterranean</option>
      <option value="12">Korean</option>
      <option value="13">Vietnamese</option>
    </select>
  </div>
  <div class="text-center">
    <button type="button" class="btn hvr-outline-out match-button" id="match-button"> Match </button>
  </div>
  <div>
    <%= Match.all.inspect%>
  </div>
</div>