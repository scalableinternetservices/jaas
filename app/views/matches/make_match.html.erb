<div class="container">
  <%= content_tag :div, '', id: 'day-of-week', data: @day_of_week %>

  <h2>MATCH ME!</h2>

  <br />
  <h4>Availability</h4>
  <div id="monday-friday-time" class="row text-center">
    <div id="monday-time" class="col-md-6 time-availability vertical-center">
      <div class="col-md-3 text-right">Monday:</div>
      <div class="col-md-3 checkbox">
        <label>
          <%= check_box_tag "monday-checkbox" %>
          Unavailable
        </label>
      </div>
      <div class="col-md-6">
        <p>Times available:</p>
        <div class="slider-container">
          <input id="monday-slider" class="availability-slider" style="width:100%"/>
        </div>
      </div>
    </div>
    <div id="friday-time" class="col-md-6 time-availability vertical-center">
      <div class="col-md-3 text-right">Friday:</div>
