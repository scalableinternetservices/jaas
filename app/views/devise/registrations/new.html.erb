<div class="container-fluid" style="width:50%; margin-bottom: 20px; position: relative;">
<h2 style="color:white">Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <div class="form-group">
      <%= label_tag :firstname, "First Name: ", class:"form-item"%>
      <%= text_field_tag :firstname, "", class:"form-control"%>
    </div>

    <div class="form-group">
      <%= label_tag :lastname, "Last Name: ", class:"form-item"%>
      <%= text_field_tag :lastname, "", class:"form-control"%>
    </div>

    <div class="form-group">
      <%= label_tag :school, "School: ", class:"form-item"%>
      <%= text_field_tag :school, "UCLA", class:"form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :email, class:"form-item" %><br />
      <%= f.email_field :email, autofocus: true, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :phone, "Phone: ", class:"form-item"%>    
      <%= text_field_tag :phone, "(000)-000-0000", class:"form-control" %>
    </div>    

    <div class="form-group">
      <%= label_tag :interests, "Interests:", class:"form-item"%>
      <%= select_tag :interests, options_for_select([["exploring", "exploring"], ["fashion", "fashion"]], 1) %>
    </div>        

    <div class="form-group">
      <%= f.label :password, class:"form-item" %>
      <% if @minimum_password_length %>
      <em class="form-item">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class:"form-item" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
    </div>

    <div>
      <%= f.submit "Sign up", class:"btn btn-success", style:"width: inherit; margin: 0 auto" %>
    </div>
<% end %>
</div>
