<div class="container-fluid" style="width:50%; margin-bottom: 20px; position: relative;">
<h2 style="color:white">Sign in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, class:"form-item" %><br />
    <%= f.email_field :email, autofocus: true, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class:"form-item" %><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class:"form-item" %>
    </div>
  <% end -%>

  <div>
    <%= f.submit "Sign in", class:"btn btn-success", style:"width: inherit; margin: 0 auto" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>